<Page x:Class="WSRKart.RegSuccess"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSRKart"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegSuccess"
      Background="White"
      ShowsNavigationUI="False"
      FontSize="18">
    <StackPanel>
       
        <Label Content="Спасибо за вашу регистрацию  в качестве гонщика!" 
           FontSize="24" HorizontalContentAlignment="Center"/>
        <Label Content="С вами свяжутся по поводу оплаты."
               HorizontalContentAlignment="Center"/>

        <Button Click="OnOK" Content="OK" HorizontalAlignment="Center"
                Width="70" Margin="30"/>
    </StackPanel>
</Page>
