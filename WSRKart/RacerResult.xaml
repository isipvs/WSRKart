<Page x:Class="WSRKart.RacerResult"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSRKart"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MyResult"
      Background="White"
      ShowsNavigationUI="False"
      FontSize="18">
    <StackPanel>
        
        <Label Content="Результаты предыдущих гонок" 
           FontSize="24" HorizontalContentAlignment="Center"/>

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" x:Name="NGender"/>

            <Label Grid.Row="0" Grid.Column="0" x:Name="NAgeCategory"/>

        </Grid>
        <Button Content="Показать все результаты" HorizontalAlignment="Center" Margin="5"/>
    </StackPanel>
</Page>
