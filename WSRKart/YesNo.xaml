<Page x:Class="WSRKart.YesNo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSRKart"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="YesNo"
      Background="White"
      ShowsNavigationUI="False"
      FontSize="20">
    <StackPanel>
        

        <Label Content="Участвовали ранее ?" FontSize="24" 
               HorizontalContentAlignment="Center" Margin="0,20,0,0"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Grid.Column="0" Content="Да" Click="OnYes" 
                    HorizontalAlignment="Right" Height="40" Margin="40" x:Name="NRegRace" Width="120"/>

            <Button Grid.Row="0" Grid.Column="1" Content="Нет" Click="OnNo" 
                    HorizontalAlignment="Left" Height="40" Margin="40" x:Name="NResultRace" Width="120"/>

        </Grid>

        
    </StackPanel>
</Page>
