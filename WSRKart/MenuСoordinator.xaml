<Page x:Class="WSRKart.СoordinatorMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSRKart"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="СoordinatorMenu"
      Background="White"
      ShowsNavigationUI="False"
      FontSize="18">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Content="Гонщики" x:Name="NRacers" Click="OnRacerc"
                    HorizontalAlignment="Center" Margin="5" Width="100"/>

        <Button Grid.Row="0" Grid.Column="1" Content="Спонсоры" x:Name="NSponsor" Click="OnSponsor"
                    HorizontalAlignment="Center" Margin="5" Width="100"/>

    </Grid>
</Page>
