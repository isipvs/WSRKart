<Page x:Class="WSRKart.ProofSponsor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSRKart"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      
      Title="ProofSponsor"
      Background="White"
      ShowsNavigationUI="False"
      FontSize="18">

    <StackPanel>
        <Label Content="Kart Skills 2017" FontSize="36" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="LightGray"/>

        <Label Content="Москва, Россия 20 июня 2017" Background="LightGray" FontSize="24" HorizontalContentAlignment="Center"/>
        <Label Content="Спасибо за спонсорскую поддержку!" FontSize="20" HorizontalContentAlignment="Center" Margin="0,20,0,0"/>

        <Label Content="" x:Name="NameSponsor"/>
        <Label Content="" x:Name="NameFund"/>
        <Label Content="" x:Name="SummaPosh" FontSize="36"/>

        <Button Content="Назад" HorizontalAlignment="Center" 
                Padding="5,5,5,5" x:Name="NCancel" Click="Cancel" />

        <Label Content="До начала события 0 лет, 8 месяцев, 5 дней, 13 минут и 18 секунд"
               Background="LightGray" HorizontalContentAlignment="Center" FontSize="20"/>
        
    </StackPanel>
</Page>
